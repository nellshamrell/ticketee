<%= form_for [@project, @ticket] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <%= render :partial => "files/form",
             :locals =>  { :number => number } %>
  <%= f.submit %>
<% end %>
<div id='files'>
<%= link_to "Add another file", 'javascript:', 
  :id => "add_another_file" %>
%>
</div>
